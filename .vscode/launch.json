{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python デバッガー: 現在のファイル",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Auto",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/splat_replay/cli.py",
      "console": "integratedTerminal",
      "args": ["auto"],
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Upload",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/splat_replay/cli.py",
      "console": "integratedTerminal",
      "args": ["upload"],
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "GUI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/splat_replay/cli.py",
      "args": ["gui"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "purpose": ["debug-in-terminal"]
    },
    {
      "name": "WebView",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/splat_replay/gui/webview_app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Web: Backend Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "splat_replay.web.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Web: Backend Server (No Reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "splat_replay.web.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Web: Dev Server (Frontend + Backend)",
      "type": "debugpy",
      "request": "launch",
      "module": "splat_replay.cli",
      "args": ["web", "--dev"],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "console": "integratedTerminal"
    }
  ]
}

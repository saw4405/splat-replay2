{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Start Dev Server",
      "type": "shell",
      "command": "npm.cmd",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Backend: Start Server (Debug)",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "python",
        "-m",
        "uvicorn",
        "splat_replay.interface.web.app:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000",
        "--reload"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Task: Build",
      "type": "shell",
      "command": "task",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Task: Verify",
      "type": "shell",
      "command": "task",
      "args": ["verify"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Task: Format",
      "type": "shell",
      "command": "task",
      "args": ["format"],
      "problemMatcher": []
    },
    {
      "label": "Task: Lint",
      "type": "shell",
      "command": "task",
      "args": ["lint"],
      "problemMatcher": []
    },
    {
      "label": "Task: Type Check",
      "type": "shell",
      "command": "task",
      "args": ["type-check"],
      "problemMatcher": []
    },
    {
      "label": "Task: Test",
      "type": "shell",
      "command": "task",
      "args": ["test"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Task: Clean",
      "type": "shell",
      "command": "task",
      "args": ["clean"],
      "problemMatcher": []
    }
  ]
}
